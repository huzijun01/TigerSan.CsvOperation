<UserControl x:Class="TigerSan.Test.Pages.ListPage"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TigerSan.Test.Pages"
             xmlns:controls="clr-namespace:TigerSan.UI.Controls;assembly=TigerSan.UI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="{StaticResource Window.Padding}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal"
                Margin="{StaticResource Card.Margin}">

                <Button
                    x:Name="btnRefresh"
                    Content="刷新"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnRefresh_ClickCommand}"
                    Background="{StaticResource Colors.Success}"/>

                <Button
                    x:Name="btnAdd"
                    Content="添加"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnAdd_ClickCommand}"/>

                <Button
                    x:Name="btnSaveList"
                    Content="保存"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnSaveList_ClickCommand}"/>

                <Button
                    x:Name="btnOpenDir"
                    Content="打开目录"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnOpenDir_ClickCommand}"/>

                <Button
                    x:Name="btnClear"
                    Content="清空"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnClear_ClickCommand}"
                    Background="{StaticResource Colors.Danger}"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <controls:TableGrid TableModel="{Binding LogTable}"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
