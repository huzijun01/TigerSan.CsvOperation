<UserControl x:Class="TigerSan.Test.Pages.TextPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TigerSan.Test.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border Padding="{StaticResource Window.Padding}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal"
                Margin="{StaticResource Card.Margin}">

                <Button
                    x:Name="btnLoad"
                    Content="加载"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnLoad_ClickCommand}"
                    Background="{StaticResource Colors.Success}"/>

                <Button
                    x:Name="btnSave"
                    Content="另存"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnSave_ClickCommand}"/>

                <Button
                    x:Name="btnSaveSource"
                    Content="保存原文本"
                    Margin="{StaticResource Button.Margin}"
                    Command="{Binding btnSaveSource_ClickCommand}"
                    Background="{StaticResource Colors.Danger}"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0"
                    Margin="{StaticResource Card.Margin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="源文本："/>
                        <TextBlock Text="{Binding SourceTime}" Foreground="{StaticResource Colors.Brand}"/>
                    </StackPanel>

                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Auto"
                        Margin="{StaticResource Card.Margin}">
                        <TextBox
                            x:Name="source"
                            Text="{Binding Source}"/>
                    </ScrollViewer>
                </Grid>

                <Grid
                    Grid.Row="1"
                    Margin="{StaticResource Card.Margin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="目标文本："/>
                        <TextBlock Text="{Binding TargetTime}" Foreground="{StaticResource Colors.Brand}"/>
                    </StackPanel>

                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Auto"
                        Margin="{StaticResource Card.Margin}">
                        <TextBox
                            x:Name="target"
                            IsReadOnly="True"
                            Text="{Binding Target}"/>
                    </ScrollViewer>
                </Grid>

                <Grid
                    Grid.Row="2"
                    Margin="{StaticResource Card.Margin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <TextBlock Text="输出文本："/>
                        <TextBlock Text="{Binding OutputTime}" Foreground="{StaticResource Colors.Brand}"/>
                    </StackPanel>

                    <ScrollViewer
                        Grid.Row="1"
                        HorizontalScrollBarVisibility="Auto"
                        Margin="{StaticResource Card.Margin}">
                        <TextBox
                            x:Name="output"
                            IsReadOnly="True"
                            Text="{Binding Output}"/>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
